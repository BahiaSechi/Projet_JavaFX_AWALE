<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <BorderPane prefHeight="600.0" prefWidth="1200.0">
         <top>
            <MenuBar style="-fx-background-color: FFBF64;" BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="Fichier">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#newGame" text="Nouveau" />
                        <MenuItem mnemonicParsing="false" onAction="#loadGame" text="Charger" />
                    <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Sauvegarder" />
                        <MenuItem mnemonicParsing="false" onAction="#surrender" text="Abandonner" />
                        <MenuItem mnemonicParsing="false" onAction="#stopGame" text="Arrêt partie" />
                        <MenuItem mnemonicParsing="false" onAction="#cancel" text="Annuler coup" />
                        <MenuItem mnemonicParsing="false" onAction="#quit" text="Quitter jeu" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Règles">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Afficher règles" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Options">
                  <items>
                        <CheckMenuItem mnemonicParsing="false" text="Voir graines" />
                        <CheckMenuItem mnemonicParsing="false" text="Voir plateau" />
                        <CheckMenuItem mnemonicParsing="false" text="Bruitages" />
                          <CheckMenuItem mnemonicParsing="false" text="Musiques" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Système">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#about" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <ImageView fitHeight="368.0" fitWidth="703.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../img/plateau.png" />
               </image>
            </ImageView>
         </center>
         <left>
            <VBox prefHeight="305.0" prefWidth="156.0" style="-fx-background-color: FFD394; -fx-border-color: FFBF64;" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Joueur 1" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="26.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Graines : ">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </left>
         <right>
            <VBox prefHeight="305.0" prefWidth="173.0" style="-fx-background-color: FFD394; -fx-border-color: FFBF64;" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Joueur 2" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="26.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Graines :">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                     </children>
            </VBox>
         </right>
      </BorderPane>
   </children>
</GridPane>
